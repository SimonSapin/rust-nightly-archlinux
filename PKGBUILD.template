pkgname=rust-nightly-bin
pkgver={VERSION}
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc='A safe, concurrent, practical language from Mozilla.'
url='http://www.rust-lang.org/'
provides='rust'
conflicts=('rust' 'rust-git' 'rust-nightly')
depends=('shared-mime-info')
license=('MIT' 'Apache')
source=("http://static.rust-lang.org/dist/rust-nightly-${arch}-unknown-linux-gnu.tar.gz")
install=rust.install
options=(staticlibs !strip)

package() {
	cd rust-nightly-${arch}-unknown-linux-gnu
	./install.sh --prefix=$pkgdir/usr
}
